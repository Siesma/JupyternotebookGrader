<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController"
      spacing="15"
      alignment="TOP_LEFT"
      prefWidth="800"
      prefHeight="700"
      style="-fx-background-color: #2b2b2b; -fx-text-fill: #dddddd;">

    <padding>
        <Insets top="15" bottom="15" left="15" right="15"/>
    </padding>

    <HBox spacing="10"
          alignment="CENTER_LEFT"
          style="-fx-background-color: #1f1f1f; -fx-padding: 8;">

        <Button text="Load Solutions"
                onAction="#onLoadSolutionNotebook"
                style="-fx-background-color: #444444; -fx-text-fill: #ffffff;"/>

        <Button text="Load Submissions"
                onAction="#onLoadHandinNotebook"
                style="-fx-background-color: #444444; -fx-text-fill: #ffffff;"/>

        <Button text="Save Exercise"
                onAction="#saveGrade"
                style="-fx-background-color: #444444; -fx-text-fill: #ffffff;"/>

        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Runner:"
               style="-fx-text-fill: #cccccc;"/>

        <ChoiceBox fx:id="runnerChoice"
                   onAction="#changeSubmissionRunner"
                   prefWidth="120"
                   style="-fx-background-color: #3c3f41; -fx-mark-color: white;"/>

        <Label text="Exercise:" style="-fx-text-fill: #cccccc;"
               visible="false" fx:id="exerciseLabel"/>

        <Slider fx:id="exerciseSlider"
                min="1"
                max="1"
                majorTickUnit="1"
                snapToTicks="true"
                showTickMarks="true"
                showTickLabels="true"
                visible="false"
                prefWidth="200"/>
    </HBox>


    <Label fx:id="submissionLabel" text="Submission Viewer"
           style="-fx-font-size: 20px; -fx-text-fill: #eeeeee;"/>

    <HBox spacing="10">
        <TextArea fx:id="submissionText"
                  wrapText="true"
                  prefHeight="300"
                  HBox.hgrow="ALWAYS"
                  style="-fx-control-inner-background: #3c3f41; -fx-text-fill: #ffffff;"/>

        <TextArea fx:id="solutionText"
                  wrapText="true"
                  editable="false"
                  prefHeight="300"
                  HBox.hgrow="ALWAYS"
                  style="-fx-control-inner-background: #2a2a2a; -fx-text-fill: #aaaaaa;"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Score:" style="-fx-text-fill: #dddddd;"/>
        <TextField fx:id="scoreField" prefWidth="80"
                   style="-fx-control-inner-background: #3c3f41; -fx-text-fill: #ffffff;" editable="false"/>
    </HBox>

    <VBox spacing="5">
        <Label text="Noten-schlÃ¼ssel:" style="-fx-text-fill: #ffffff;"/>
        <VBox fx:id="gradingBox" spacing="5"/>
    </VBox>


    <VBox spacing="5">
        <Label text="Comments:" style="-fx-text-fill: #dddddd;"/>
        <TextArea fx:id="commentField" prefHeight="100"
                  style="-fx-control-inner-background: #3c3f41; -fx-text-fill: #ffffff; -fx-highlight-fill: #555555; -fx-highlight-text-fill: #ffffff;"/>
    </VBox>

    <HBox spacing="20">
        <Button text="Previous" onAction="#onPrev" style="-fx-background-color: #555555; -fx-text-fill: #ffffff;"/>
        <Button text="Next" onAction="#onNext" style="-fx-background-color: #555555; -fx-text-fill: #ffffff;"/>
        <Button text="Save (backup)" onAction="#emergencySave" style="-fx-background-color: #555555; -fx-text-fill: #ffffff;"/>
    </HBox>

    <Label text="Outputs:" style="-fx-text-fill: #eeeeee;"/>
    <TextArea fx:id="outputArea"
              prefHeight="150"
              wrapText="true"
              editable="false"
              style="-fx-control-inner-background: #3c3f41; -fx-text-fill: #ffffff; -fx-highlight-fill: #555555; -fx-highlight-text-fill: #ffffff;"/>
    <Button text="Run" onAction="#runStudentCode"
            style="-fx-background-color: #555555; -fx-text-fill: #ffffff;"/>


</VBox>
